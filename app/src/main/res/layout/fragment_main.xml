<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/sunny_bg"
  android:orientation="vertical">

  <com.example.bb.weather14.customview.CustomHeaderView
    android:id="@+id/custom_header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:custom_header_left_action_ic_src="@drawable/ic_menu" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/semi_transparent"
      android:orientation="vertical"
      android:padding="16dp">
      <include layout="@layout/layout_main_temp" />
      <TextView
        android:layout_width="wrap_content"
        android:text="@string/du_bao"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
      <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="1dp"/>
      <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hourly_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>