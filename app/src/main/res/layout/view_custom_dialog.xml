<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounding_rectangle_dialog"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:text="Error"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingStart="@dimen/margin_10dp"
        android:paddingEnd="@dimen/margin_10dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/blue_gray"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_content_dialog"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxWidth="300dp"
        android:text="There is some problem when get you location"

        android:padding="10dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_negative_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancle"
            android:textColor="@color/blue"
            android:padding="10dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:background="@color/gray"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_possitive_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Cancle"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>