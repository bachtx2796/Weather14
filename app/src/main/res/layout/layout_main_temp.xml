<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/bg_opacity_black"
  android:orientation="vertical"
  android:padding="7dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tv_current_day"
        style="@style/BaseTextView.TitleText"
        android:textSize="12sp" />

      <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:textSize="24sp" />
    </LinearLayout>

    <TextView
      style="@style/BaseTextView.TitleText"
      android:layout_marginLeft="@dimen/margin_20dp"
      android:fontFamily="sans-serif-thin"
      android:text="25"
      android:textSize="56sp" />

    <TextView
      style="@style/BaseTextView.TitleText"
      android:layout_height="match_parent"
      android:paddingTop="5dp"
      android:text="o"
      android:textSize="15sp" />

    <TextView
      style="@style/BaseTextView.TitleText"
      android:layout_height="match_parent"
      android:layout_marginLeft="1dp"
      android:paddingTop="8dp"
      android:text="C"
      android:textSize="16sp" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_10dp"
      android:layout_marginTop="@dimen/margin_10dp"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/main_iv"
        android:layout_width="36dp"
        android:layout_height="36dp" />

      <TextView
        style="@style/BaseTextView.TitleText"
        android:text="Ẩm ướt, nhiều mây"
        android:textSize="14sp" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:gravity="center">

    <TextView
      style="@style/BaseTextView.TitleText"
      android:text="Lớn nhất: 30"
      android:textSize="@dimen/ts_14sp" />

    <TextView
      style="@style/BaseTextView.TitleText"
      android:layout_marginBottom="@dimen/margin_5dp"
      android:layout_marginLeft="1dp"
      android:text="o"
      android:textSize="12sp" />

    <TextView
      style="@style/BaseTextView.TitleText"
      android:layout_marginLeft="@dimen/margin_10dp"
      android:text="Nhỏ nhất: 30"
      android:textSize="@dimen/ts_14sp" />

    <TextView
      style="@style/BaseTextView.TitleText"
      android:layout_marginBottom="@dimen/margin_5dp"
      android:layout_marginLeft="1dp"
      android:text="o"
      android:textSize="12sp" />
  </LinearLayout>

  <TextView
    style="@style/BaseTextView.TitleText"
    android:layout_gravity="center"
    android:text="Gió: Đông   12km/h"
    android:textSize="@dimen/ts_14sp" />

</LinearLayout>